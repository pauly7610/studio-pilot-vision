# API Keys
GROQ_API_KEY=your_groq_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# AI Insights API Authentication (optional - if not set, auth is disabled)
AI_INSIGHTS_API_KEY=your_secure_api_key_here

# Admin API Key for protected endpoints
ADMIN_API_KEY=your_admin_api_key_here

# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_anon_key

# AI Configuration
GROQ_MODEL=llama-3.3-70b-versatile
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001

# Cognee Configuration (optional)
COGNEE_DATA_PATH=./cognee_data
LLM_API_KEY=${GROQ_API_KEY}
EMBEDDING_API_KEY=${HUGGINGFACE_API_KEY}

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
